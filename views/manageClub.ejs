<!DOCTYPE html>
<html>

<head>
  <title><%= messageNotificationsLength > 0 ? "(" + messageNotificationsLength + ") " : "" %> <%= config.siteName %> - Manage Club</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/css/mdb.min.css" rel="stylesheet">
  
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/js/mdb.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
    <a class="navbar-brand" href="/"><%= config.siteName %></a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="basicExampleNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/messages">Messages 
            <span id="messages" class="badge badge-light <%= messageNotificationsLength > 0 ? '' : 'd-none' %>"><%= messageNotificationsLength %></span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/games">Games</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/clubs">Chess Clubs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if (user.isAdmin) { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Console</a>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="nav-link" href="/profile/<%= user.name %>">Profile</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="row m-4">
    <div class="col-3">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="homeNav" data-toggle="pill" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fas fa-home mr-1"></i> Home</a>
        <% if (user.club.status == "owner") { %>
          <a class="nav-link" id="manageMembersNav" data-toggle="pill" href="#manageMembers" role="tab" aria-controls="manageMembers" aria-selected="false"><i class="fas fa-user-cog mr-1"></i> Manage Members</a>
          <a class="nav-link" id="updateClubNav" data-toggle="pill" href="#updateClub" role="tab" aria-controls="updateClub" aria-selected="false"><i class="fas fa-edit mr-1"></i> Update Club</a>
        <% } %>
      </div>
    </div>
    <div class="col-9">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <div class="mx-auto my-3 text-center">
            <div class="d-flex justify-content-center">
              <% if (user.club.status == "owner") { %>
                <button class="btn btn-danger" onClick="deleteClub()"><i class="fas fa-trash-alt mr-1"></i> Delete Club</button>
              <% } %>
            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="manageMembers" role="tabpanel" aria-labelledby="manage-members-tab">
          <% if (club.members.length > 0) { %>
            <% if (club.members.findIndex(x => x.pending == true) !== -1) { %>
              <h3 class="text-center m-4 font-weight-light">Members pending approval</h3>
              <table class="table table-striped w-75 m-auto">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Actions</th>
                  </tr>
                </thead>
          
                <tbody id="pendingMembersTable">
                <% club.members.map((account, index) => { %>
                  <% if (account.pending) { %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= account.name %></td>
                      <td><a href="javascript:;" class="text-success mr-3" onClick="acceptMember('<%= account.name %>')" title="Accept Member"><i class="fas fa-check-circle fa-lg"></i></a> <a href="javascript:;" class="text-danger" onClick="removeMember('<%= account.name %>')" title="Remove Member"><i class="fas fa-times-circle fa-lg"></i></a></td>
                    </tr>
                  <% } %>
                <%})%>
                </tbody>
              </table>
            <% } %>

            <% if (club.members.findIndex(x => !x.pending) !== -1) { %>
              <h3 class="text-center m-4 font-weight-light">All members</h3>
              <table class="table table-striped w-75 m-auto">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Actions</th>
                  </tr>
                </thead>
          
                <tbody id="membersTable">
                <% club.members.map((account, index) => { %>
                  <% if (!account.pending) { %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= account.name %></td>
                      <td><a href="javascript:;" class="text-danger" onClick="removeMember('<%= account.name %>')" title="Remove Member"><i class="fas fa-times-circle fa-lg"></i></a> </td>
                    </tr>
                  <% } %>
                <%})%>
                </tbody>
              </table>
            <% } %>
          <% } else { %>
            <h3 class="text-center m-4 font-weight-light">No members</h3>
          <% } %>
        </div>

        <% if (user.club.status == "owner") { %>
          <div class="tab-pane fade" id="updateClub" role="tabpanel" aria-labelledby="update-club-tab">
            <h3 class="m-4 text-center font-weight-light">Update Club</h3>

            <ul class="nav nav-tabs mb-5" id="editPreviewTabs" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="edit-tab" data-toggle="tab" href="#edit" role="tab" aria-controls="edit" aria-selected="true">Edit</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="preview-tab" data-toggle="tab" href="#preview" role="tab" aria-controls="preview" aria-selected="false">Preview</a>
              </li>
            </ul>
            <div class="tab-content" id="tabContent">
              <div class="tab-pane fade show active" id="edit" role="tabpanel" aria-labelledby="edit-tab">
                <div class="btn-group m-2 d-flex justify-content-center" role="group">
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('bold')"><i class="fas fa-bold"></i></button>
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('italic')"><i class="fas fa-italic"></i></button>
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('underline')"><i class="fas fa-underline"></i></button>
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('strikethrough')"><i class="fas fa-strikethrough"></i></button>
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('link')"><i class="fas fa-link"></i></button>
                  <button type="button" class="btn btn-secondary" onClick="insertFormatting('image')"><i class="far fa-image"></i></button>
                  <button id="headingDropdown" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Headings
                  </button>
                  <div class="dropdown-menu" aria-labelledby="headingDropdown">
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h1')">Heading 1</a>
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h2')">Heading 2</a>
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h3')">Heading 3</a>
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h4')">Heading 4</a>
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h5')">Heading 5</a>
                    <a class="dropdown-item" href="javascript:;" onClick="insertFormatting('h6')">Heading 6</a>
                  </div>
                </div>

                <form method="post" action="/api/updateClubText">
                  <div class="form-group m-auto">
                    <textarea class="form-control" id="clubText" name="clubText" onkeyup="updatePreview()" rows="12"><%= club.text %></textarea>
                  </div>

                  <div class="m-4 d-flex justify-content-center">
                    <button class="btn btn-success btn-lg" type="submit"><i class="fas fa-paper-plane mr-1"></i> Update</button>
                  </div>
                </form>
              </div>
              <div class="tab-pane fade" id="preview" role="tabpanel" aria-labelledby="preview-tab"></div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

</body>

<script>
  const user = <%- JSON.stringify(user) %>;
  const config = <%- JSON.stringify(config) %>
  var socket = io.connect(window.location.host);

  socket.on("message", (data) => {
    console.log(data);
    if (data.to == user) {
      if (document.getElementById("messages").getAttribute("class").split(" ").indexOf("d-none") !== -1) {
        $("#messages").removeClass("d-none");
      }

      if (document.title[0] !== "(") {
        document.title = "(0) " + document.title;
      }
      document.getElementById("messages").innerHTML = Number(document.getElementById("messages").innerHTML) + 1;
      document.title = document.title.replace(document.title[1], Number(document.title[1]) + 1);      
    }
  });

  if (user.club.status == "owner") {
    document.getElementById("preview").innerHTML = marked(<%- JSON.stringify(club.text) %>);

    insertFormatting = (format) => {
      switch (format) {
        case "italic":
          document.getElementById("clubText").value += "*italic*";
          document.getElementById("clubText").focus();
          break;
        case "bold":
          document.getElementById("clubText").value += "**bold**";
          document.getElementById("clubText").focus();
          break;
        case "underline":
          document.getElementById("clubText").value += "__underline__";
          document.getElementById("clubText").focus();
          break;
        case "strikethrough":
          document.getElementById("clubText").value += "~~strikethrough~~";
          document.getElementById("clubText").focus();
          break;
        case "link":
          document.getElementById("clubText").value += "[Display text](url)";
          document.getElementById("clubText").focus();
          break;
        case "image":
          document.getElementById("clubText").value += "![Image](image_url)";
          document.getElementById("clubText").focus();
          break;
        case "h1":
          document.getElementById("clubText").value += "# heading1";
          document.getElementById("clubText").focus();
          break;
        case "h2":
          document.getElementById("clubText").value += "## heading2";
          document.getElementById("clubText").focus();
          break;
        case "h3":
          document.getElementById("clubText").value += "### heading3";
          document.getElementById("clubText").focus();
          break;
        case "h4":
          document.getElementById("clubText").value += "#### heading4";
          document.getElementById("clubText").focus();
          break;
        case "h5":
          document.getElementById("clubText").value += "###### heading5";
          document.getElementById("clubText").focus();
          break;
        case "h6":
          document.getElementById("clubText").value += "###### heading6";
          document.getElementById("clubText").focus();
          break;
      }

      updatePreview();
    }

    updatePreview = () => {
      document.getElementById("preview").innerHTML = marked(document.getElementById("clubText").value);
    }

    deleteClub = () => {
      swal({
        title: "Are you sure?",
        text: "Your club will be permanently deleted. This action can not be undone!",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {
          swal({
            text: 'Enter the name of your club to delete it.',
            content: "input",
            button: {
              text: "Delete Club",
              closeModal: true,
            },
          })
          .then(name => {
            if (!name) {
              throw null;
            } else if (name == <%- JSON.stringify(club.name) %>) {
  
              axios.post('/api/deleteClub')
                .then(function (response) {
                  swal("Success", "Your club has been successfully deleted", "success")
                    .then((value) => {
                      window.location = "/";
                    });
                })
                .catch(function (error) {
                  swal("Error", "Something went wrong while deleting your account", "error");
                  console.log(error);
                });
            } else {
              swal("Your club has not been deleted");
            }
          });
        } else {
          swal("Your club has not been deleted");
        }
      }); 
    }

    removeMember = (name) => {
      axios.post('/api/leaveClub', {
        name: name
      })
      .then(function (response) {
        swal("Success", name + "'s account has been successfully removed", "success")
          .then((value) => {
            window.location = window.location;
          });
      })
      .catch(function (error) {
        swal("Error", "Something went wrong while removing " + name + "'s account", "error");
        console.log(error);
      });   
    }

    acceptMember = (name) => {
      axios.post('/api/acceptClubMember', {
        name: name
      })
      .then(function (response) {
        swal("Success", name + "'s account has been successfully accepted", "success")
          .then((value) => {
            window.location = window.location;
          });
      })
      .catch(function (error) {
        swal("Error", "Something went wrong while accepting " + name + "'s account", "error");
        console.log(error);
      });   
    }
  }

  updatePreview()
</script>

</html>